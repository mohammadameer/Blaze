{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "airbnb/hooks",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx","tsx"] }],
        "react/prop-types": 0,
        "react/function-component-definition": 0,
        "react-hooks/exhaustive-deps": 0,
        "global-require": 0,
        "no-use-before-define": 0,
        "import/order": 0,
        "no-lonely-if": 0
    }
}
